{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "functions": {
    "api/audio-proxy/[...path].js": {
      "maxDuration": 60
    },
    "api/audio-secondary-proxy/[...path].js": {
      "maxDuration": 60
    },
    "api/test.js": {
      "maxDuration": 30
    }
  },
  "headers": [
    {
      "source": "/api/audio-proxy/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, HEAD, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Range, Accept-Ranges, Content-Range, If-Range, If-None-Match"
        },
        {
          "key": "Access-Control-Expose-Headers",
          "value": "Content-Range, Content-Length, Accept-Ranges"
        }
      ]
    },
    {
      "source": "/api/audio-secondary-proxy/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, HEAD, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Range, Accept-Ranges, Content-Range, If-Range, If-None-Match"
        },
        {
          "key": "Access-Control-Expose-Headers",
          "value": "Content-Range, Content-Length, Accept-Ranges"
        }
      ]
    },
    {
      "source": "/api/test",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, OPTIONS"
        }
      ]
    }
  ]
} 