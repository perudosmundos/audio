{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/((?!api/).*)",
      "destination": "/index.html"
    }
  ],
  "functions": {
    "api/assemblyai.js": {
      "maxDuration": 60
    },
    "api/s3-presign.js": {
      "maxDuration": 60
    },
    "api/s3-presign-get.js": {
      "maxDuration": 60
    },
    "api/ia-upload.js": {
      "maxDuration": 60
    }
  },
  "headers": [
    {
      "source": "/api/assemblyai",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Cache-Control", "value": "no-store" }
      ]
    }
  ]
} 